<!DOCTYPE html>
<html>
<head>
  <title>Backy</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
</head>

<body>
<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <div id="<%= dom_id post %>">
      <p>
        <strong>Title:</strong>
        <%= post.title %>
      </p>

      <p>
        <strong>Body:</strong>
        <%= post.body %>
      </p>

    </div>
  <% end %>
</div>

</body>
</html>
